@model TerminvereinbarungLib.Termin

@{
    ViewBag.Title = "Create";
}

<h2>Termin</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Behanlungsauswahl</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div class="form-group">
            @Html.LabelFor(model => model.BehandlungId, "verfügbare Behandlungen", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("BehandlungId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BehandlungId, "", new { @class = "text-danger" })
            </div>
        </div>

       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="weiter zur Arztauswahl" class="btn btn-default" />
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
